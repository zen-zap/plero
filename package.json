{
    "name": "plero",
    "version": "1.0.0",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc --noEmitOnError false",
        "build:frontend": "npm run build:react && npm run build:main",
        "build:main": "npx tsc src/main.ts src/preload.ts --outDir dist --target ES2022 --module commonjs --esModuleInterop --resolveJsonModule --moduleResolution node --allowSyntheticDefaultImports --skipLibCheck",
        "build:react": "vite build",
        "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
        "dev:react": "vite",
        "dev:electron": "npm run build:main && cross-env NODE_ENV=development electron .",
        "start": "electron .",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:electron": "npx electron-mocha --require ts-node/register src/tests/ipc_tests/*.test.ts",
        "lint": "tsc --noEmit",
        "typecheck": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zen-zap/plero.git"
    },
    "keywords": [],
    "author": "zen-zap",
    "license": "ISC",
    "type": "commonjs",
    "dependencies": {
        "@codemirror/autocomplete": "^6.20.0",
        "@codemirror/lang-javascript": "^6.2.4",
        "@codemirror/lang-rust": "^6.0.2",
        "@huggingface/inference": "^4.13.10",
        "@huggingface/transformers": "^3.8.1",
        "@langchain/community": "^1.1.7",
        "@langchain/core": "^1.1.17",
        "@langchain/langgraph": "^1.1.0",
        "@langchain/openai": "^1.2.3",
        "@langchain/tavily": "^1.2.0",
        "@uiw/codemirror-theme-vscode": "^4.25.4",
        "@uiw/react-codemirror": "^4.25.4",
        "dotenv": "^16.6.1",
        "hnswlib-node": "^3.0.0",
        "openai": "^6.16.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.0.10",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "autoprefixer": "^10.4.23",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^40.0.0",
        "electron-mocha": "^13.0.0",
        "jsdom": "^27.4.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
