{
    "name": "plero",
    "version": "1.0.0",
    "main": "dist/main.js",
    "scripts": {
        "build": "tsc --noEmitOnError false",
        "build:frontend": "npm run build:react && npm run build:main",
        "build:main": "npx tsc src/main.ts src/preload.ts --outDir dist --target ES2020 --module commonjs --esModuleInterop --resolveJsonModule --moduleResolution node --allowSyntheticDefaultImports --skipLibCheck",
        "build:react": "vite build",
        "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
        "dev:react": "vite",
        "dev:electron": "npm run build:main && cross-env NODE_ENV=development electron .",
        "start": "electron .",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "test:electron": "npx electron-mocha --require ts-node/register src/tests/ipc_tests/*.test.ts",
        "lint": "tsc --noEmit",
        "typecheck": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zen-zap/plero.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/zen-zap/plero/issues"
    },
    "homepage": "https://github.com/zen-zap/plero#readme",
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.0.14",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^4.0.18",
        "@vitest/ui": "^4.0.18",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^37.2.3",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^4.0.18"
    },
    "dependencies": {
        "@codemirror/lang-javascript": "^6.2.4",
        "@codemirror/lang-rust": "^6.0.2",
        "@huggingface/inference": "^4.5.3",
        "@huggingface/transformers": "^3.6.3",
        "@langchain/community": "^0.3.49",
        "@langchain/core": "^0.3.65",
        "@langchain/openai": "^0.6.2",
        "@langchain/tavily": "^0.1.4",
        "@uiw/codemirror-theme-vscode": "^4.25.4",
        "@uiw/react-codemirror": "^4.25.4",
        "dotenv": "^16.4.5",
        "hnswlib-node": "^3.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "uuid": "^11.1.0"
    },
    "description": ""
}
